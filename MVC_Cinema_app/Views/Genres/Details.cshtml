@model BusinessLogic.DTOs.GenreDTO

@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    ViewData["Title"] = "Details";
}

<h1>Деталі жанру</h1>

<div>
    <h4>Жанр</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва жанру:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Відредагувати</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
