@model BusinessLogic.DTOs.RoomDTO

@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва кінозали
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Вмістимість кінозалу
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Відредагувати</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
