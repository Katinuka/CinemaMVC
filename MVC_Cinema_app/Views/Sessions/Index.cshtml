@model IEnumerable<BusinessLogic.DTOs.SessionDTO>

@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    ViewData["Title"] = "Sessions";
}

<h1>Sessions</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя Фильма</th>
            <th>
                @Html.DisplayNameFor(model => model.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().MovieId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="movie-name" data-movie-id="@item.MovieId">Loading...</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Create New</a>
</div>

@section Scripts {
    <script>document.addEventListener("DOMContentLoaded", function () {
            var movieNameElements = document.querySelectorAll(".movie-name");
            movieNameElements.forEach(function (element) {
                var movieId = element.getAttribute("data-movie-id");
                fetch(`/Sessions/GetMovieName?movieId=${movieId}`)
                    .then(response => response.json())
                    .then(data => {
                        element.textContent = data;
                    })
                    .catch(error => {
                        console.error('Error fetching movie name:', error);
                        element.textContent = 'Error';
                    });
            });
        });</script>
}
